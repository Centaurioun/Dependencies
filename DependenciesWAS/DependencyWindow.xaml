<TabViewItem
    x:Class="Dependencies.DependencyWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dependencies"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<TabViewItem.Resources>
		<local:ImageToHeaderConverter x:Key="img"/>
	</TabViewItem.Resources>

	<Grid x:Name="ResizeElemGrid" Margin="0,0,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="146*"/>
			<RowDefinition Height="5"/>
			<RowDefinition Height="46*"/>
		</Grid.RowDefinitions>

		<Grid x:Name="TreeImportExportGrid" 
              Margin="0,0,0,0"
              Grid.Row="0">

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300*"/>
				<ColumnDefinition Width="5"/>
				<ColumnDefinition Width="600*"/>
			</Grid.ColumnDefinitions>

			<TreeView x:Name="DllTreeView"  
                    HorizontalContentAlignment="Stretch" 
                    VerticalContentAlignment="Stretch" 
                    Padding="0" Expanding="DllTreeView_Expanding">
				<TreeView.ItemTemplate>
					<DataTemplate x:DataType="local:ModuleTreeViewItem">
						<TreeViewItem>
							<Grid Margin="0,0,5,0">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="24"/>
									<ColumnDefinition Width="3" />
									<ColumnDefinition Width="*" />
								</Grid.ColumnDefinitions>


								<!--System icon for the current module-->
								<Image Grid.Column="0" Width="16" Height="16" Margin="0,0,0,0" 
                                               Source="{x:Bind Path=ModuleFilePath, Converter={StaticResource img} }">
									<!--="{Binding Path=(local:ModuleTreeViewItem.Tooltip), RelativeSource={RelativeSource AncestorLevel=1,AncestorType=TreeViewItem,Mode=FindAncestor}}"-->
                                        </Image>
