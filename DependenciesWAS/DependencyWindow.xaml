										<DrawingBrush AlignmentX="Left" AlignmentY="Top">
											<DrawingBrush.Drawing>
												<DrawingGroup>
													<GeometryDrawing Brush="#88888888">
														<GeometryDrawing.Geometry>
															<RectangleGeometry Rect="0,0,40,40" />
